{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true  // Add this line
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}